{
  "pluginAlias": "TuyaIR",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "TuyaIR"
      },
      "client_id": {
        "title": "Client ID",
        "type": "string",
        "required": true,
        "default": "",
        "description": "Your Tuya IOT cloud project's client ID"
      },
      "secret": {
        "title": "Client Secret",
        "type": "string",
        "required": true,
        "default": "",
        "description": "Your Tuya IOT cloud project's secret"
      },
      "region": {
        "title": "Device Region",
        "type": "string",
        "required": true,
        "default": "",
        "oneOf": [
          {
            "title": "India",
            "enum": [
              "in"
            ]
          },
          {
            "title": "Europe",
            "enum": [
              "eu"
            ]
          },
          {
            "title": "China",
            "enum": [
              "cn"
            ]
          },
          {
            "title": "America",
            "enum": [
              "us"
            ]
          }
        ]
      },
      "deviceId": {
        "title": "IR Blaster Device ID",
        "type": "string",
        "required": true,
        "default": "",
        "description": "Device Id of IR Blaster"
      },
      "autoFetchRemotes": {
        "title": "Fetch configured remotes automatically?",
        "type": "boolean",
        "required": true,
        "default": true,
        "description": "Uncheck this box if your IR remotes are not discovered automatically. You will need to add your remote IDs manually below"
      },
      "devices": {
        "title": "List of configured IR Blaster Rmeotes",
        "type": "array",
        "items": {
          "type": "object",
          "title": "Remote Details",
          "properties": {
            "id": {
              "title": "Remote Id",
              "type": "string",
              "description": "IR Blaster Device ID",
              "required": true
            },
            "diy": {
              "title": "Is this Remote DIY?",
              "type": "boolean",
              "required": true
            }
          }
        },
        "condition": {
          "functionBody": "return model.autoFetchRemotes === false;"
        }
      }
    }
  }
}